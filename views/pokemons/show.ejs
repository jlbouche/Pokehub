<%- include('../partials/header') %>

<div class = "pokeprofile">
    <h1><%=pokemon.pokename %></h1>
    <section id="show-page">
        <div>PokeID:</div>
        <div><%= pokemon.pokeid %></div>
        <div>PokeTypes: </div>
        <div><%= pokemon.poketype1 %></div>
        <div><%= pokemon.poketype2 %></div>
        <div>Description: </div>
        <div><%= pokemon.pokedescript %></div>
      </section>
      <h2>Researcher notes</h2>
      <form id="add-note-form" method="POST" action="/pokemons/<%= pokemon._id %>/notes">
        <label>Notes:</label>
        <textarea name="content"></textarea>
        <input type="submit" value="Add Note">
      </form>
      
      <% if (pokemon.notes.length) { %>
        <table>
          <thead>
            <tr>
              <th>Date</th>
              <th>Researcher</th>
              <th>Notes</th>
            </tr>
          </thead>
          <tbody>
            <% pokemon.notes.forEach(function(n) { %>
              <tr>
                <td><%= n.createdAt.toLocaleDateString() %></td>
                <td><%= user.name %></td>
                <td><%= n.content %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <h5>No researcher notes yet</h5>
      <% } %>
</div>
<%- include('../partials/footer') %>