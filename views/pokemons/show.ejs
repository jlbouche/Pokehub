<%- include('../partials/header') %>

<body>
    <h1><%=pokemon.pokename %></h1>
    <section id="show-page">
        <div>PokeID:</div>
        <div><%= pokemon.pokeid %></div>
        <div>PokeTypes: </div>
        <div><%= pokemon.poketype1 %></div>
        <div><%= pokemon.poketype2 %></div>
        <div>Notes: </div>
        <div><%= pokemon.notes %></div>
      </section>
    <form id="add-note-form" method="POST" action="/pokemons/<%=pokemon._id %>">
        <label>Researcher Notes:</label>
        <textarea name="notecontent"></textarea>
        <input type="submit" value="Add Note">
      </form>
      <% if (pokemon.notes.length) { %>
        <% pokemon.notes.forEach(function(n) { %>
              <tr>
                <td><%= n.createdAt.toLocaleDateString() %></td>
                <td><%= r.content %></td>
              </tr>
            <% }); %>
            <tr>
              <td colspan="2"></td>
              <td><strong><%= (total / pokemon.notes.length).toFixed(1) %></strong></td>
            </tr>
          </tbody>
        </table>
      <% } else { %>
        <h5>No Notes Yet</h5>
      <% } %>
</body>

<%- include('../partials/footer') %>