<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Test</title>
</head>
<body>
    <h1><%=pokemons.pokename %></h1>
    <section id="show-page">
        <div>PokeID:</div>
        <div><%= pokemons.pokeid %></div>
        <div>PokeTypes: </div>
        <div><%= pokemons.poketype1 %></div>
        <div><%= pokemons.poketype2 %></div>
        <div>Notes: </div>
        <div><%= pokemons.notes %></div>
      </section>
    <form id="add-note-form" method="POST" action="/pokemons/<%=pokemons._id %>">
        <label>Researcher Notes:</label>
        <textarea name="notecontent"></textarea>
        <input type="submit" value="Add Note">
      </form>
      <% if (pokemons.notes.length) { %>
        <% pokemons.notes.forEach(function(n) { %>
              <tr>
                <td><%= n.createdAt.toLocaleDateString() %></td>
                <td><%= r.content %></td>
              </tr>
            <% }); %>
            <tr>
              <td colspan="2"></td>
              <td><strong><%= (total / movie.reviews.length).toFixed(1) %></strong></td>
            </tr>
          </tbody>
        </table>
      <% } else { %>
        <h5>No Notes Yet</h5>
      <% } %>
</body>
</html>